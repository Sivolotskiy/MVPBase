<?xml version="1.0" encoding="utf-8"?>
<com.redwerk.spamhound.ui.view.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_event_ripple_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleColor="@color/colorTextInactive"
    app:mrl_rippleDimension="@dimen/ripple_size"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:orientation="horizontal">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/item_chat_image_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="@dimen/normal_margin"
            android:scaleType="centerCrop"
            tools:src="@drawable/cast_album_art_placeholder" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_chat_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                tools:text="Alex Pushkin" />

            <TextView
                android:id="@+id/item_chat_message_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_chat_name_text_view"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:lines="2" />
        </RelativeLayout>

    </LinearLayout>
</com.redwerk.spamhound.ui.view.MaterialRippleLayout>